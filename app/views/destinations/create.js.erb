$('#destination_form_dialog').dialog('close');
$('<li></li>').appendTo('#destination_list #destinations')
              .attr({
                'data-mtp-destination': <%= @destination.id %>,
                'data-mtp-spot': <%= @destination.spot_id %>,
                'data-mtp-spot-latitude': '<%= @destination.spot.latitude %>',
                'data-mtp-spot-longitude': <%= @destination.spot.longitude %>})
              .html('<%= raw escape_javascript(render 'plans/destination', :destination => @destination) %>');
$.gritter.add({title: 'MTP', text: '<%= escape_javascript @destination.spot.name %>を目的地に追加しました！'});
