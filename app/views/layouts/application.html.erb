<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <%= stylesheet_link_tag 'jquery-ui-1.8.5.custom' %>
  <%= stylesheet_link_tag '/javascripts/jquery.ui.stars/jquery.ui.stars.min.css' %>
  <%= stylesheet_link_tag 'fileuploader' %>
  <%= stylesheet_link_tag 'formtastic' %>
  <%= stylesheet_link_tag 'formtastic_changes' %>
  <%= stylesheet_link_tag 'application' %>
  <%= stylesheet_link_tag 'plan' %>
  <%= stylesheet_link_tag 'side' %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'utils' %>
  <%= javascript_include_tag 'jquery-ui-1.8.5.custom.min' %>
  <%= javascript_include_tag 'jquery.ui.stars/jquery.ui.stars.min' %>
  <%=raw include_gritter %>
  <link rel="image_src" href="/images/plan/plan_pic001.jpg" />
  <!-- TODO: ↑適宜画像差し換え -->
  <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=true&language=ja"></script>
  <%= csrf_meta_tag %>
  <title>旅PLuS</title>
  <meta name="description" content="">
  <meta name="keywords" content="旅PLuS,旅,PLuS">
</head>
<body>
<div id="tabiplus">
  <div id='header'>
    <h1><%= link_to '旅PLuS', root_path %></h1>
    <div>
      <%= link_to '旅PLuSとは？', '#' %>
      <%= link_to 'プランを見る', plans_path %>
      <%- if logged_in? -%>
        <%= link_to 'プランを作る', new_plan_path %>
        <%= current_user.name %>
        <%= link_to 'ログアウト', logout_path %>
      <%- else -%>
        <%= link_to 'ログイン', login_path %>
      <%- end -%>
    </div>
  </div>
  <div id="main">
    <div id="container" class="clearfix">
      <div id="mainArea">
        <%= yield %>
      </div>
      <%= yield :sidebar %>
    </div>
  </div>
  <div id='footer'>
    <%= link_to 'トップ', root_path %>
    <%= link_to '旅PLuSとは', "#" %>
    <%= link_to 'お問い合わせ', "#" %>

    &copy; KRAY Inc. All rights reserved.
  </div>
</div>
</body>
</html>
