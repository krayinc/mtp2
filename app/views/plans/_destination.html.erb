<div class="destination">
  <div class="time"><%= destination.time %></div>
  <div class="name" mtp-spot-name><%= destination.spot.name %></div>
  <div class="comment"><%= destination.comment %></div>
  <div class="photos"><%= destination_photo_list destination, :upload => true %></div><br clear="left">
  <div>
    <%= link_to t('Edit'), edit_plan_destination_path(:plan_id => destination.plan_id, :id => destination.id, :format => :js), :remote => true %>
